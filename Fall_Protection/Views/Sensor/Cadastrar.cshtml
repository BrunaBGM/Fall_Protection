@model Fall_Protection.Data.Entities.Sensor

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Formulário</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Sensor" asp-action="Cadastrar">
                        <input asp-for="SensorId" type="hidden" />
                        <div class="mb-3 d-flex flex-column align-items-start">
                            <label class="form-label" for="basic-default-fullname">Status</label>
                            <select asp-for="StatusSensor" asp-items="Html.GetEnumSelectList<StatusEnum>()" class="form-control text-muted" style="width: 13%;"></select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Dispositivo</label>
                            <input asp-for="DispositivoModelo" type="text" class="form-control" placeholder="Tilt SW-200D" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Número de série</label>
                            <input asp-for="DispositivoNumeroSerie" type="text" class="form-control" placeholder="0798" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Valor</label>
                            <input asp-for="PrecoAparelho" type="text" class="form-control" id="basic-default-company" placeholder="R$ 15.000" />
                        </div>
                        <div class="row text-center">
                            <div class="col-sm-10">
                                <input type="submit" class="btn btn-primary" value="Enviar" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>