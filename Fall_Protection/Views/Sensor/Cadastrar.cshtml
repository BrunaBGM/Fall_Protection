@model Fall_Protection.Data.Entities.Sensor

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Basic Layout</h5>
                    <small class="text-muted float-end">Default label</small>
                </div>
                <div class="card-body">
                    <form asp-controller="Sensor" asp-action="Cadastrar">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Dispositivo</label>
                            <input asp-for="DispositivoModelo" type="text" class="form-control" placeholder="Tilt SW-200D" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Número de série</label>
                            <input asp-for="DispositivoNumeroSerie" type="text" class="form-control" placeholder="0798" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-company">Valor</label>
                            <input asp-for="PrecoAparelho" type="text" class="form-control" id="basic-default-company" placeholder="R$ 15.000" />
                        </div>
                        <div class="row text-center">
                            <div class="col-sm-10">
                                <input type="submit" class="btn btn-primary" value="Enviar" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>