@model Fall_Protection.Data.Entities.PessoaJuridica

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Formulário /</span> Pessoa Jurídica</h4>
    <div class="d-flex flex-row-reverse">
        <a asp-controller="Pessoa" asp-action="CadastroPessoaFisica" class="btn btn-dark ">
            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
            </svg>
            Pessoa Física
        </a>
    </div>
    <br>
    <div class="row">
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Tela de Cadastro</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Pessoa" asp-action="CadastroPessoaJuridica">
                        <input asp-for="PessoaId" type="hidden" />
                        <input asp-for="PessoaJuridicaId" type="hidden" />
                        <input asp-for="Pessoa.TipoPessoa" type="hidden" value="Pessoa Jurídica" />
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Razão Social</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-company2" class="input-group-text">
                                        <i class="bx bx-buildings"></i>
                                    </span>
                                    <input asp-for="Pessoa.Nome" type="text"
                                           id="basic-icon-default-company"
                                           class="form-control"
                                           placeholder="ACME Inc."
                                           aria-label="ACME Inc."
                                           aria-describedby="basic-icon-default-company2" />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-email">Email</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                    <input asp-for="Pessoa.Email" type="text"
                                           id="basic-icon-default-email"
                                           class="form-control"
                                           placeholder="john.doe@email.com"
                                           aria-label="john.doe"
                                           aria-describedby="basic-icon-default-email2" />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 form-label" for="basic-icon-default-phone">Telefone</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-phone2" class="input-group-text">
                                        <i class="bx bx-phone"></i>
                                    </span>
                                    <input asp-for="Pessoa.Telefone" type="text"
                                           id="basic-icon-default-phone"
                                           class="form-control phone-mask"
                                           placeholder="11 97990 8941"
                                           aria-label="11 97990 8941"
                                           aria-describedby="basic-icon-default-phone2" />
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">CNPJ(Cadastro Nacional da Pessoa Jurídica)</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-vcard-fill" viewBox="0 0 16 16">
                                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm9 1.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4a.5.5 0 0 0-.5.5ZM9 8a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4A.5.5 0 0 0 9 8Zm1 2.5a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 0-1h-3a.5.5 0 0 0-.5.5Zm-1 2C9 10.567 7.21 9 5 9c-2.086 0-3.8 1.398-3.984 3.181A1 1 0 0 0 2 13h6.96c.026-.163.04-.33.04-.5ZM7 6a2 2 0 1 0-4 0 2 2 0 0 0 4 0Z" />
                                        </svg>
                                    </span>
                                    <input asp-for="Cnpj" type="text" class="form-control"
                                           placeholder="111.678.980-77"
                                           aria-label="111.678.980-77" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 mb-4">
                            <div class="divider">
                                <div class="divider-text">Endereço</div>
                            </div>
                            <div class="container mt-5">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="input1">CEP</label>
                                            <input asp-for="Endereco.Cep" type="text" class="form-control" id="input2" placeholder="12.456-899">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="input2">Logradouro</label>
                                            <input asp-for="Endereco.Logradouro" type="text" class="form-control" id="input2" placeholder="Ex:Rua,Alameda,Avenida...">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mt-2">
                                            <label for="input2">Numero</label>
                                            <input asp-for="Endereco.Numero" type="text" class="form-control" id="input2" placeholder="Digite aqui">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mt-2">
                                            <label for="input2">Complemento</label>
                                            <input asp-for="Endereco.Complemento" type="text" class="form-control" id="input2" placeholder="Opcional">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mt-2">
                                            <label for="input2">Bairro</label>
                                            <input asp-for="Endereco.Bairro" type="text" class="form-control" id="input2" placeholder="Digite aqui">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mt-2">
                                            <label for="input2">Cidade</label>
                                            <input asp-for="Endereco.Cidade" type="text" class="form-control" id="input2" placeholder="Digite aqui">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mt-2">
                                            <label for="input2">Estado</label>
                                            <input asp-for="Endereco.Estado" type="text" class="form-control" id="input2" placeholder="Digite aqui">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mt-2">
                                            <label for="input2">País</label>
                                            <input asp-for="Endereco.Pais" type="text" class="form-control" id="input2" placeholder="Digite aqui">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row text-center">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Enviar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>